class Solution {
    public int longestOnes(int[] nums, int k) {
        int n = nums.length;
        int maxlength = 0;
        int left=0,right=0;
        int zeroescount = 0;
        while(right<n){
                if(nums[right]==0){
                    zeroescount++;
                }
        
        while(zeroescount>k){
            if(nums[left]==0){
                zeroescount--;
            }
            left++;
        }
        maxlength = Math.max(maxlength,right-left+1);
     right++;
       
    }
    return maxlength;
     
}

}
